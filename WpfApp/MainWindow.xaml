<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#757575">
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="142" Margin="12,0,0,4" Stroke="Black" VerticalAlignment="Bottom" Width="227"/>

        <TextBox x:Name="startxpos" HorizontalAlignment="Left" Height="22" Margin="56,324,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="51" TextChanged="InputTextBox_TextChanged" MouseLeftButtonDown="startxpos_MouseLeftButtonDown"/>
        <Button Content="제출" HorizontalAlignment="Left" Margin="88,393,0,0" VerticalAlignment="Top" Width="75" Click="confirm_scenario_click"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="56,303,0,0"><Run Text="X좌표"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Y좌표" VerticalAlignment="Top" Margin="138,303,0,0"/>
        <Canvas x:Name="Map" HorizontalAlignment="Left" Height="208" VerticalAlignment="Top" Width="360" Margin="248,51,0,0" Background="#FFEBE6E6"  MouseLeftButtonDown="Map_MouseLeftButtonDown" />
        <TextBlock HorizontalAlignment="Left" Height="18" Margin="16,276,0,0" TextWrapping="Wrap" Text="공중위협 좌표" VerticalAlignment="Top" Width="91"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="56,351,0,0"><Run Text="X좌표"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Y좌표" VerticalAlignment="Top" Margin="138,351,0,0"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="18,303,0,0" Text="초기"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="18,351,0,0" Text="목적"/>
        <TextBox x:Name="startypos" HorizontalAlignment="Left" Height="22" Margin="138,324,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="44" MouseLeftButtonDown="startypos_MouseLeftButtonDown"/>
        <TextBox x:Name="endypos" HorizontalAlignment="Left" Height="19" Margin="138,367,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="44"/>
        <TextBox x:Name="endxpos" HorizontalAlignment="Left" Height="19" Margin="56,372,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="51" TextChanged="endxpos_TextChanged"/>
        <Button Content="저장" HorizontalAlignment="Left" Height="22" Margin="190,324,0,0" VerticalAlignment="Top" Width="43" RenderTransformOrigin="0.5,0.5" Click="start_load_click"/>
        <Button Content="저장" HorizontalAlignment="Left" Height="19" Margin="190,367,0,0" VerticalAlignment="Top" Width="43" Click="start_load_click"/>

    </Grid>
</Window>
